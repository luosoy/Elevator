<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <jmxConfigurator/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5p][%d{yyyy/MM/dd HH:mm:ss.SSS}][%.-32t][sequenceid:%mdc{sequenceid}] %m [%.50logger]%rEx{3}%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>


    <logger name="org.apache.commons.beanutils.converters" level="WARN"/>
    <logger name="org.apache.commons.beanutils.ConvertUtils" level="WARN"/>
    <logger name="org.apache.cxf.phase.PhaseInterceptorChain" level="WARN"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="BaseLogAspect" level="INFO"/>
    <logger name="BusinessLog" level="INFO"/>

    <root level="info" name="com.luosoy" additivity="false">
        <appender-ref ref="console"/>
    </root>
</configuration>